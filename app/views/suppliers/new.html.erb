<div class="text-center">

<% @page_title = "New Supplier" %>
  <h1>New Supplier</h1>
  <%= form_for(:supplier, :url => {:controller => 'suppliers', :action => 'create'}) do |f| %>
      <p> Name:</br> <%= f.text_field :name %> </p>
      <p> Type:</br> <%= f.text_field :type %> </p>
      <p> Description:</br> <%= f.text_field :description %> </p>
      <p> Address:</br> <%= f.text_field :address %> </p>

      <%= f.submit :create %>
  <% end %>
 </div>