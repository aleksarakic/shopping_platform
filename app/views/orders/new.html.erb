<div class="text-center">
<div>
  <%= form_for(@order) do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name, required: true, autofocus: true %>
    </p>
    <p>
      <%= f.label :email %><br>
      <%= f.email_field :email %>
    </p>
    <p>
      <%= f.label :delivery_address %><br>
      <%= f.text_area :delivery_address %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>
</div>